<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "PlayBoard" %></title>
  <%= favicon_link_tag %>
  
  <%= stylesheet_link_tag :all, :cache => true %>
  <%= javascript_tag "var RAILS_AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
  <%= javascript_include_tag 'mootools.js', :cache => true %>
  <%= javascript_include_tag 'mootools-more.js', :cache => true %>
  
  <%= javascript_include_tag 'rails.js', :cache => true %>
  
  <%= javascript_include_tag 'board/Point.js', :cache => true %>
  <%= javascript_include_tag 'board/Keyframe.js', :cache => true %>
  <%= javascript_include_tag 'board/Player.js', :cache => true %>
  <%= javascript_include_tag 'board/Play.js', :cache => true %>
  <%= javascript_include_tag 'board/Chalkboard.js', :cache => true %>
  <%= javascript_include_tag 'board/Main.js', :cache => true %>
  <%= javascript_include_tag 'board/JSONLoader.js', :cache => true %>
  <%= javascript_include_tag 'board/AJAXFormHandler.js', :cache => true %>
  <!--[if IE]><%= javascript_include_tag 'board/excanvas.js' %><![endif]-->
  <%= csrf_meta_tag %>
</head>
<body>
  <%= render :partial => 'shared/header' %>
  <%= render_flash_messages %>
  <% if @user = User.find_by_id(session[:user_id]) %>
    <%= render :partial => 'shared/loggedInLinks' %>
  <% else %>
    <%= render :partial => 'shared/links' %>
  <% end %>
  
  <div id='container'>
    
    <%= yield %>
    
  </div>
  <%= render :partial => 'shared/footer' %>
</body>
</html>